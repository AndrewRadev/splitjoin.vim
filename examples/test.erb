      <span>Google</span>
    <% end %>

    <%= link_to('Google', 'http://google.com', :class => 'google', :id => 'google-link') %>
    <%= link_to('http://google.com', :class => 'google', :id => 'google-link') do %>
      <span>Google</span>
    <% end %>

