    <%# hashes: %>

    <% foo = { :bar => 'baz', :one => { :two => 'three', :four => 'five' }, :five => 'six' } %>
    <% foo = { bar: 'baz', :one => { :two => 'three', :four => 'five' }, :five => 'six' } %>
